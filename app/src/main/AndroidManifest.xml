<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.zup.rickandmorty">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_rickmorty"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_rickmorty"
        android:supportsRtl="true"
        android:theme="@style/Theme.RickAndMorty"
        tools:targetApi="31">
        <activity
            android:name=".ui.home.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name="br.com.zup.rickandmorty.ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.RickAndMorty.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>